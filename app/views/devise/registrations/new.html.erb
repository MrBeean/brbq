<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, placeholder: 'Введите email', class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: 'off', placeholder: 'Введите пароль', class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Подтвердите пароль',class:
              'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="actions">
          <%= f.submit 'Зарегистрироваться', class: "btn btn-success btn-block"%>
        </div>
      </div>
    </div>
<% end %>

<div class="row buffer-top">
  <div class="col-xs-6">
    <%= render 'devise/shared/links' %>
  </div>
</div>