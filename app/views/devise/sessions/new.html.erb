<h2><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, placeholder: 'Введите email', class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Введите пароль', class: 'form-control' %>
        </div>
      </div>
    </div>

  <% if devise_mapping.rememberable? %>
      <div class="row">
        <div class="col-md-6">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
  <% end %>

  <div class="row buffer-top">
    <div class="col-xs-6">
      <div class="actions">
        <%= f.submit t('.sign_in'), class: "btn btn-success" %>
      </div>
    </div>
  </div>

<% end %>

<div class="row buffer-top">
  <div class="col-xs-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
